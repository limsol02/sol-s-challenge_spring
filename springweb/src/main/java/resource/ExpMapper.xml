<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="springweb.a02_mvc.a03_dao.A01_Dao">
	<select id="getEmpList" resultType="emp" 
		parameterType="emp">
		<!--  [namespace ==> 인터페이스 경로]
			  [id ==> 메서드명],
			  [resultType ==> 리턴타입 명(경로)] / List무시하고 걍 타입만 넣음됨
			  [parameterType ==> 매개변수 명(경로)]
			  
			  리턴타입이랑 매개변수명 springweb.z01_vo.Emp로 경로로 설정해도 되는데
			  mybatis에 별칭으로 springweb.z01_vo.Emp 를 emp로 설정해둬서(alias)
			  mapper.xml에서는 그냥 별칭으로 사용 가능
			   -->
		select * from emp02 where ename like '%' || #{ename} || '%'
			 and job like '%' || #{job} || '%'
	</select>
		<!--  ename ==> sch.getEname(),
			  job ==> sch.getJob() -->
	
	<select id="getCountEmp" resultType="int">
		select count(*) from emp
	</select>		  
	
	<select id="getCountDept" resultType="int">
		select count(*) from dept
	</select>
	
	<select id="getDeptList" resultType="dept" parameterType="dept">
	    select * from dept01 where dname like '%' || #{dname} || '%' and loc like '%' || #{loc} || '%'
	</select>
	
	<select id="getDnameByDname" resultType="String" parameterType="int">
		select dname from dept where deptno = #{deptno}
	</select>
			  
</mapper>